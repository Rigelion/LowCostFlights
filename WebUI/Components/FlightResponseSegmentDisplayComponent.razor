@code {
    [Parameter]
    public SegmentDto Segment { get; set; } = null!;

    [CascadingParameter(Name = "Dictionaries")]
    protected DictionariesDto Dictionaries { get; set; } = null!;


    string GetCarrierName(string carrierCode) => Dictionaries.Carriers[carrierCode];
    string GetAircraftName(string aircraftCode) => Dictionaries.Aircrafts[aircraftCode];

}
